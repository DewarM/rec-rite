<form class="" action="/albums" method="post">

  <main class="main list-container">
    <section class="item">

      <div class="contents">
        <img class="album" src="http://placehold.it/100x100" alt="album_cover">


        <div class="album-text">
          <div class="text-element">
            <label for="title">Title</label>
            <input id="title" type="text" name="title" value="">
          </div>

          <div class="text-element">
            <label for="artist_id">artist</label>
            <select class="" name="artist_id">
              <% @artists.each do |artist| %>
              <option name="artist_id" value="<%= artist.id %>"><%= artist.name %></option>
              <% end %>
            </select>
          </div>

          <div class="text-element">
            <label for="cover_url">cover url</label>
            <input id="cover_url" type="text" name="cover_url" value="">
          </div>

          <div class="text-element">
            <label for="stock">Stock</label>
            <input id="stock" type="number" name="stock" value="">
          </div>

          <div class="text-element">
            <label for="stockrule_id">stockrule</label>
            <select class="" name="stockrule_id">
              <% @stockrules.each do |stockrule| %>
              <option value="<%= stockrule.id %>"><%= stockrule.name %></option>
              <% end %>
            </select>
          </div>
        </div>

        <div class="stock-box end grey">
          <input type="submit" value="submit">
        </div>

      </div>

    </section>
  </main>

</form>
