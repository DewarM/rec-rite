<%= yield %>

<main class="main list-container">
  <h2>Album search results</h2>
  <% @searched_albums.each do |album| %>
  <section class="item">

    <div class="contents">
      <img class="album" src="<%= album.cover_url %>" alt="album_cover">


      <div class="album-text">
        <div class="text-element">
          <a href="/albums/<%= album.id %>/edit"><h2><%= album.title %><div class="cog"></div></h2></a>

        </div>
        <div class="text-element">
          <a href="/artists/<%= album.artist.id %>/edit"><%= album.artist.name %><div class="cog"></div></a>

        </div>
      </div>

      <div class="stock-box end <%= album.stock_status %>">
        <p><%= album.stock %> </p>
      </div>

      <div class="stock-control-group">
        <form action="/albums/<%= album.id %>/add_stock" method="post">
          <label class="hidden" for="add_stock">Add</label>
          <input class="stock-control-button plus" type="submit" name="add_stock" value="+">
        </form>

        <form action="/albums/<%= album.id %>/remove_stock" method="post">
          <label class="hidden" for="remove_stock">Remove</label>
          <input class="stock-control-button minus" type="submit" name="remove_stock" value="-">
        </form>
      </div>

    </div>

  </section>
  <% end %>

  <h2>Artist search results</h2>
  <% @searched_artists.each do |artist| %>
  <section class="item">

    <div class="contents">
      <img class="album" src="<%= artist.picture %>" alt="picture">

      <div class="album-text">
        <div class="text-element">
          <a href="/artists/<%= artist.id %>/edit"><h2><%= artist.name %><div class="cog"></div></h2></a>
        </div>
      </div>

    </div>

  </section>
  <% end %>
</main>
